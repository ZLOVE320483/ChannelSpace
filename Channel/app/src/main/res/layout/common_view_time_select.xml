<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_dialog_bg" >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/common_dialog_bg"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:paddingTop="@dimen/common_margin" >

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/common_text_black_2"
            android:textSize="@dimen/common_text_size_3" />

        <TimePicker
            android:id="@+id/timepicker"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/tv_dialog_title"
            android:layout_centerInParent="true"
            android:calendarViewShown="false" />

        <ImageView
            android:id="@id/id_divider_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:layout_below="@+id/timepicker"
            android:layout_marginTop="@dimen/common_margin"
            android:contentDescription="@string/img_desc"
            android:src="@color/common_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/id_divider_1"
            android:orientation="horizontal" >

            <Button
                android:id="@id/id_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/cancel"
                android:textColor="@color/common_text_green"
                android:textSize="@dimen/common_text_size_2" />

            <ImageView
                android:id="@id/id_divider_1"
                android:layout_width="@dimen/list_divider"
                android:layout_height="@dimen/common_item_height"
                android:contentDescription="@string/img_desc"
                android:src="@color/common_divider" />

            <Button
                android:id="@id/id_confirm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/common_text_green"
                android:textSize="@dimen/common_text_size_2" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>