<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@id/id_project_img"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/img_desc"
            android:scaleType="fitXY"
            android:src="@drawable/ic_image_download"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@id/id_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/common_text_black_2"
                android:textSize="@dimen/common_text_size_5" />

            <TextView
                android:id="@id/id_project_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:textColor="@color/common_text_black_4"
                android:textSize="@dimen/common_text_size_5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/common_margin"
                android:background="@color/white"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" >

                <TextView
                    android:id="@+id/commission_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="@string/feedback_commission"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="@color/white"
                    android:background="@drawable/common_green_txt_bg"
                    android:textSize="@dimen/common_text_size_5" />

                <TextView
                    android:id="@+id/commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/commission_tag"
                    android:singleLine="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/common_bg_top_bar"
                    android:textSize="@dimen/common_text_size_5" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>