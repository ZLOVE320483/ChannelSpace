<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_content"
    android:orientation="vertical" >

    <include layout="@layout/common_view_top_bar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider"
        android:contentDescription="@string/img_desc"
        android:src="@color/common_divider" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/navi_mode"
                android:textColor="@color/common_text_black_3"
                android:textSize="@dimen/common_hint_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider"
                android:contentDescription="@string/img_desc"
                android:src="@color/common_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/navi_mode_drive_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:background="@drawable/common_item_bg"
                    android:padding="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/navi_mode_drive"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_2" />

                    <RadioButton
                        android:id="@+id/rb_navi_mode_drive"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:button="@drawable/common_check_bg"
                        android:checked="true" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_divider"
                    android:contentDescription="@string/img_desc"
                    android:src="@color/common_divider" />

                <RelativeLayout
                    android:id="@+id/navi_mode_walk_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:background="@drawable/common_item_bg"
                    android:padding="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/navi_mode_walk"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_2" />

                    <RadioButton
                        android:id="@+id/rb_navi_mode_walk"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:button="@drawable/common_check_bg" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider"
                android:contentDescription="@string/img_desc"
                android:src="@color/common_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/navi_strategy_select"
                android:textColor="@color/common_text_black_3"
                android:textSize="@dimen/common_hint_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider"
                android:contentDescription="@string/img_desc"
                android:src="@color/common_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/navi_strategy_speed_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:background="@drawable/common_item_bg"
                    android:padding="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/navi_strategy_speed"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_2" />

                    <RadioButton
                        android:id="@+id/rb_navi_strategy_speed"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:button="@drawable/common_check_bg"
                        android:checked="true" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_divider"
                    android:contentDescription="@string/img_desc"
                    android:src="@color/common_divider" />

                <RelativeLayout
                    android:id="@+id/navi_strategy_cost_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:background="@drawable/common_item_bg"
                    android:padding="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/navi_strategy_cost"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_2" />

                    <RadioButton
                        android:id="@+id/rb_navi_strategy_cost"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:button="@drawable/common_check_bg" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_divider"
                    android:contentDescription="@string/img_desc"
                    android:src="@color/common_divider" />

                <RelativeLayout
                    android:id="@+id/navi_strategy_distance_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:background="@drawable/common_item_bg"
                    android:padding="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/navi_strategy_distance"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_2" />

                    <RadioButton
                        android:id="@+id/rb_navi_strategy_distance"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:button="@drawable/common_check_bg" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_divider"
                    android:contentDescription="@string/img_desc"
                    android:src="@color/common_divider" />

                <RelativeLayout
                    android:id="@+id/navi_strategy_nohighway_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:background="@drawable/common_item_bg"
                    android:padding="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/navi_strategy_nohighway"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_2" />

                    <RadioButton
                        android:id="@+id/rb_navi_strategy_nohighway"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:button="@drawable/common_check_bg" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_divider"
                    android:contentDescription="@string/img_desc"
                    android:src="@color/common_divider" />

                <RelativeLayout
                    android:id="@+id/navi_strategy_timenojam_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:background="@drawable/common_item_bg"
                    android:padding="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/navi_strategy_timenojam"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_2" />

                    <RadioButton
                        android:id="@+id/rb_navi_strategy_timenojam"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:button="@drawable/common_check_bg" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_divider"
                    android:contentDescription="@string/img_desc"
                    android:src="@color/common_divider" />

                <RelativeLayout
                    android:id="@+id/navi_strategy_costnojam_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:background="@drawable/common_item_bg"
                    android:padding="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/navi_strategy_costnojam"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_2" />

                    <RadioButton
                        android:id="@+id/rb_navi_strategy_costnojam"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:button="@drawable/common_check_bg" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@id/id_confirm"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="20dp"
                android:background="@drawable/common_green_btn_bg"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>