<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_top_bar_height"
    android:background="@color/common_bg_top_bar" >

    <View
        android:id="@+id/id_add"
        android:layout_width="50dp"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size" />

    <TextView
        android:id="@id/id_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/recommend_bg"
        android:layout_marginRight="12dp"
        android:text="@string/customer_status_report"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size_4" />

</RelativeLayout>