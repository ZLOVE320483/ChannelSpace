<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.zlove.base.widget.NoScrollViewPager
        android:id="@id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/id_indicator_0"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:contentDescription="@string/img_desc"
            android:src="@drawable/ic_indicator_selected" />

        <ImageView
            android:id="@+id/id_indicator_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/img_desc"
            android:src="@drawable/ic_indicator_normal" />

        <ImageView
            android:id="@+id/id_indicator_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/img_desc"
            android:src="@drawable/ic_indicator_normal" />

        <ImageView
            android:id="@+id/id_indicator_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:contentDescription="@string/img_desc"
            android:src="@drawable/ic_indicator_normal" />
    </LinearLayout>

</RelativeLayout>