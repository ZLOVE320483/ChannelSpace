<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_content" >

    <include
        android:id="@id/id_top"
        layout="@layout/common_view_top_bar" />

    <ImageView
        android:id="@id/id_divider_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider"
        android:layout_below="@id/id_top"
        android:contentDescription="@string/img_desc"
        android:src="@color/common_divider" />

    <LinearLayout
        android:id="@+id/id_modify_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_divider_1"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:contentDescription="@string/img_desc"
            android:src="@color/common_divider" />

        <RelativeLayout
            android:id="@id/id_modify_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height"
            android:background="@drawable/common_item_bg"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/user_modify_pwd"
                android:textColor="@color/common_text_black_2"
                android:textSize="@dimen/common_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/img_desc"
                android:src="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:layout_marginLeft="@dimen/common_margin"
            android:contentDescription="@string/img_desc"
            android:src="@color/common_divider" />

        <RelativeLayout
            android:id="@id/id_modify_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height"
            android:background="@drawable/common_item_bg"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/user_modify_account"
                android:textColor="@color/common_text_black_2"
                android:textSize="@dimen/common_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/img_desc"
                android:src="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:contentDescription="@string/img_desc"
            android:src="@color/common_divider" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_modify_container"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:contentDescription="@string/img_desc"
            android:src="@color/common_divider" />

        <RelativeLayout
            android:id="@id/id_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height"
            android:background="@drawable/common_item_bg"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/app_about"
                android:textColor="@color/common_text_black_2"
                android:textSize="@dimen/common_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/img_desc"
                android:src="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:layout_marginLeft="@dimen/common_margin"
            android:contentDescription="@string/img_desc"
            android:src="@color/common_divider" />

        <RelativeLayout
            android:id="@id/id_check_app_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height"
            android:background="@drawable/common_item_bg"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/user_check_version"
                android:textColor="@color/common_text_black_2"
                android:textSize="@dimen/common_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/img_desc"
                android:src="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:layout_marginLeft="@dimen/common_margin"
            android:contentDescription="@string/img_desc"
            android:src="@color/common_divider" />

        <RelativeLayout
            android:id="@id/id_user_protocol"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height"
            android:background="@drawable/common_item_bg"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/user_protocol"
                android:textColor="@color/common_text_black_2"
                android:textSize="@dimen/common_item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/img_desc"
                android:src="@drawable/ic_arrow_right" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:contentDescription="@string/img_desc"
            android:src="@color/common_divider" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider"
        android:layout_above="@id/id_exit"
        android:contentDescription="@string/img_desc"
        android:src="@color/common_divider" />

    <Button
        android:id="@id/id_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:layout_above="@id/id_divider_2"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/user_exit"
        android:textColor="#fa3d37"
        android:textSize="20sp" />

    <ImageView
        android:id="@id/id_divider_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/img_desc"
        android:src="@color/common_divider" />

</RelativeLayout>