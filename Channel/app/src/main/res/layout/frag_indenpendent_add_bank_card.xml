<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_content"
    android:orientation="vertical" >

    <include layout="@layout/common_view_top_bar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider"
        android:contentDescription="@string/img_desc"
        android:src="@color/common_divider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="@dimen/common_margin"
        android:text="@string/add_bank_card_tip"
        android:textColor="@color/common_text_black_3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider"
        android:contentDescription="@string/img_desc"
        android:src="@color/common_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >
        
        <RelativeLayout
            android:id="@+id/select_bank_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height" >

            <TextView
                android:id="@+id/bank_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="@string/bank_card_name"
                android:textColor="@color/common_text_black_3"
                android:textSize="@dimen/common_item_text_size" />

            <TextView
                android:id="@id/id_bank_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="85dp"
                android:textColor="@color/common_text_black_1"
                android:textSize="@dimen/common_item_text_size" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common_margin"
                android:contentDescription="@string/img_desc" />
        </RelativeLayout>
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:layout_marginLeft="@dimen/common_margin"
            android:contentDescription="@string/img_desc"
            android:src="@color/common_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height" >

            <TextView
                android:id="@+id/bank_card_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="@string/bank_card_num"
                android:textColor="@color/common_text_black_3"
                android:textSize="@dimen/common_item_text_size" />

            <EditText
                android:id="@id/id_bank_card_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="85dp"
                android:background="@null"
                android:inputType="number"
                android:textColor="@color/common_text_black_1"
                android:textSize="@dimen/common_item_text_size" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:layout_marginLeft="@dimen/common_margin"
            android:contentDescription="@string/img_desc"
            android:src="@color/common_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height" >

            <TextView
                android:id="@+id/bank_card_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="@string/bank_card_user_name"
                android:textColor="@color/common_text_black_3"
                android:textSize="@dimen/common_item_text_size" />

            <EditText
                android:id="@id/id_bank_card_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="85dp"
                android:background="@null"
                android:hint="@string/img_desc"
                android:textColor="@color/common_text_black_1"
                android:textSize="@dimen/common_item_text_size" />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider"
        android:contentDescription="@string/img_desc"
        android:src="@color/common_divider" />

    <Button
        android:id="@id/id_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_green_btn_bg"
        android:text="@string/submit"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</LinearLayout>