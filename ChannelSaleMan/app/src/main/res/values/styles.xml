<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="myNotitle" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="main_bottom_tab">
        <item name="android:textColor">@color/color_bottom_bar_text</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:button">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    
    <style name="customer_intention_select">
        <item name="android:textColor">@color/customer_intention_select_text</item>
        <item name="android:button">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/common_text_size_4</item>
        <item name="android:background">@drawable/customer_intention_select_bg</item>
    </style>
    
    <style name="contact_tab_appearance">
        <item name="android:textColor">@color/contact_tab_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="gender_tab_appearance">
        <item name="android:textColor">@color/gender_tab_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="MessageBox">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="centerDialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_dialog_show</item>
        <item name="android:windowExitAnimation">@anim/scale_dialog_close</item>
    </style>
    
    <style name="img_detail_bottom_tab">
        <item name="android:textColor">@color/color_img_detail_text</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:button">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="MenuDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_out</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_in</item>
    </style>

</resources>
