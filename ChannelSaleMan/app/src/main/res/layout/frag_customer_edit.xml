<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_content"
    android:orientation="vertical" >

    <include layout="@layout/common_view_top_bar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider"
        android:contentDescription="@string/img_desc"
        android:src="@color/common_divider" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg_content"
        android:fillViewport="true"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:paddingLeft="@dimen/common_margin"
                    android:paddingRight="@dimen/common_margin" >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/name"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_hint_text_size" />

                    <EditText
                        android:id="@id/id_customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tv_name"
                        android:background="@android:color/transparent"
                        android:hint="@string/customer_add_name"
                        android:paddingLeft="@dimen/common_margin"
                        android:paddingRight="@dimen/common_margin"
                        android:textColorHint="@color/common_hint_color"
                        android:textSize="@dimen/common_hint_text_size" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_divider"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:contentDescription="@string/img_desc"
                    android:src="@color/common_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/common_margin"
                    android:paddingRight="@dimen/common_margin" >

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/telephone"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_hint_text_size" />

                    <TextView
                        android:id="@id/id_customer_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_phone"
                        android:background="@android:color/transparent"
                        android:paddingLeft="@dimen/common_margin"
                        android:paddingRight="@dimen/common_margin"
                        android:textColor="@color/common_text_black_4"
                        android:textSize="@dimen/common_hint_text_size" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider"
                android:contentDescription="@string/img_desc"
                android:src="@color/common_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_margin"
                android:text="@string/customer_intention"
                android:textColor="@color/common_text_black_3"
                android:textSize="@dimen/common_text_size_4" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider"
                android:contentDescription="@string/img_desc"
                android:src="@color/common_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:background="@color/white"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" >

                <LinearLayout
                    android:id="@id/id_customer_intention_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/rb_intention_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/customer_intention_a"
                        android:button="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/customer_intention_a"
                        android:textColor="@color/common_text_black_3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/id_customer_intention_b"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/rb_intention_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/customer_intention_b"
                        android:button="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/customer_intention_b"
                        android:textColor="@color/common_text_black_3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/id_customer_intention_c"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/rb_intention_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/customer_intention_c"
                        android:button="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/customer_intention_c"
                        android:textColor="@color/common_text_black_3" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/id_customer_intention_d"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/rb_intention_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/customer_intention_d"
                        android:button="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/customer_intention_d"
                        android:textColor="@color/common_text_black_3" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider"
                android:contentDescription="@string/img_desc"
                android:src="@color/common_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_margin"
                android:text="@string/required"
                android:textColor="@color/common_text_black_3"
                android:textSize="@dimen/common_text_size_4" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider"
                android:contentDescription="@string/img_desc"
                android:src="@color/common_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/common_margin"
                    android:paddingRight="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/from"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_3" />

                    <RadioButton
                        android:id="@+id/from_phone"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/from_tel" />

                    <RadioButton
                        android:id="@+id/from_visit"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/from_visit" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="@dimen/common_margin"
                    android:paddingRight="@dimen/common_margin"
                    android:text="@string/price"
                    android:textColor="@color/common_text_black_2"
                    android:textSize="@dimen/common_text_size_3" />

                <com.zlove.base.widget.DoubleDirectSeekBar
                    android:id="@+id/project_price_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/common_margin"
                    android:paddingRight="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project_layout"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_3" />

                    <CheckBox
                        android:id="@+id/id_project_layout_one"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_layout_one" />

                    <CheckBox
                        android:id="@+id/id_project_layout_two"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_layout_two" />

                    <CheckBox
                        android:id="@+id/id_project_layout_three"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_layout_three" />

                    <CheckBox
                        android:id="@+id/id_project_layout_four"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_layout_four" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/common_margin"
                    android:paddingRight="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project_layout"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_3"
                        android:visibility="invisible" />
                    
                    <CheckBox
                        android:id="@+id/id_project_layout_five"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_layout_five" />

                    <CheckBox
                        android:id="@+id/id_project_layout_five_more"
                        style="@style/customer_intention_select"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_layout_five_more" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/common_margin"
                    android:paddingRight="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project_type"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_3" />

                    <CheckBox
                        android:id="@+id/id_project_type_high"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_type_high" />

                    <CheckBox
                        android:id="@+id/id_project_type_multy"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_type_multy" />

                    <CheckBox
                        android:id="@+id/id_project_type_stack"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_type_stack" />

                    <CheckBox
                        android:id="@+id/id_project_type_house"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_type_house" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/common_margin"
                    android:paddingRight="@dimen/common_margin" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project_type"
                        android:textColor="@color/common_text_black_2"
                        android:textSize="@dimen/common_text_size_3"
                        android:visibility="invisible" />

                    <CheckBox
                        android:id="@+id/id_project_type_apart"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_type_apart" />

                    <CheckBox
                        android:id="@+id/id_project_type_office"
                        style="@style/customer_intention_select"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_type_office" />

                    <CheckBox
                        android:id="@+id/id_project_type_shop"
                        style="@style/customer_intention_select"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="@string/project_type_shop" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_divider"
                android:contentDescription="@string/img_desc"
                android:src="@color/common_divider" />

            <Button
                android:id="@id/id_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_confirm_button_height"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="20dp"
                android:background="@drawable/common_green_btn_bg"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/confirm_button_text_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>