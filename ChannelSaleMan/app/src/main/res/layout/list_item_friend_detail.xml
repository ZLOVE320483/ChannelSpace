<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_margin"
    android:paddingRight="@dimen/common_margin" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp" >

        <TextView
            android:id="@id/id_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/common_text_black_2"
            android:textSize="@dimen/common_hint_text_size" />

        <ImageView
            android:id="@id/id_customer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/id_customer_name"
            android:contentDescription="@string/img_desc" />

        <TextView
            android:id="@id/id_customer_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/id_customer_type"
            android:textColor="@color/common_text_black_2"
            android:textSize="@dimen/common_text_size_4" />

        <TextView
            android:id="@id/id_customer_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_round_rect_bg"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:textColor="@color/common_bg_top_bar"
            android:textSize="@dimen/common_text_size_4" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="18dp" >

        <TextView
            android:id="@+id/id_project_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text_black_5"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="8"
            android:textSize="@dimen/common_text_size_4" />

        <TextView
            android:id="@id/id_project_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_project_area"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/id_project_area"
            android:textColor="@color/common_text_black_5"
            android:textSize="@dimen/common_text_size_4" />

        <TextView
            android:id="@+id/project_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_project_area"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="8"
            android:layout_toRightOf="@id/id_project_price"
            android:textColor="@color/common_text_black_5"
            android:textSize="@dimen/common_text_size_4" />

        <TextView
            android:id="@+id/project_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_project_area"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="8"
            android:layout_toRightOf="@id/project_layout"
            android:textColor="@color/common_text_black_5"
            android:textSize="@dimen/common_text_size_4" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="18dp" >

        <TextView
            android:id="@id/id_customer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text_black_5"
            android:textSize="@dimen/common_text_size_4" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>