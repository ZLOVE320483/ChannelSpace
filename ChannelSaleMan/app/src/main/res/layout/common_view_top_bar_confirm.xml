<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_top_bar_height"
    android:background="@color/common_bg_top_bar"
    android:orientation="vertical" >

    <ImageView
        android:id="@id/id_back"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/common_top_bar_back_bg"
        android:contentDescription="@string/img_desc"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/ic_topbar_back" />

    <ImageView
        android:id="@+id/divider_black"
        android:layout_width="@dimen/list_divider"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/id_back"
        android:contentDescription="@string/img_desc"
        android:src="@color/common_divider" />

    <RelativeLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>
    
    <Button
        android:id="@id/id_confirm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/common_top_bar_back_bg"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/common_hint_text_size"
        android:gravity="center" />

</RelativeLayout>