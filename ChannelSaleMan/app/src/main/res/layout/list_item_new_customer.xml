<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp" >

                <TextView
                    android:id="@id/id_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/common_text_black_2"
                    android:textSize="@dimen/common_text_size_2" />

                <ImageView
                    android:id="@id/id_customer_intention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/id_customer_name"
                    android:contentDescription="@string/img_desc" />

                <TextView
                    android:id="@id/id_customer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/id_customer_intention"
                    android:textColor="@color/common_text_black_3"
                    android:textSize="@dimen/common_text_size_4" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@id/id_project_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_black_4"
                    android:textSize="@dimen/common_text_size_4" />

                <TextView
                    android:id="@id/id_project_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/common_text_black_4"
                    android:textSize="@dimen/common_text_size_4" />

                <TextView
                    android:id="@id/id_project_house_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/common_text_black_4"
                    android:textSize="@dimen/common_text_size_4" />

                <TextView
                    android:id="@id/id_project_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/common_text_black_4"
                    android:textSize="@dimen/common_text_size_4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="top"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/house_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_black_4"
                    android:textSize="@dimen/common_text_size_4"/>

                <TextView
                    android:id="@id/id_independent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/common_text_black_4"
                    android:textSize="@dimen/common_text_size_4" />


                <TextView
                    android:id="@id/id_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/common_text_black_4"
                    android:textSize="@dimen/common_text_size_4" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>